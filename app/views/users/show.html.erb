<p class="container-fluid text-right"><%= link_to 'Back to Users', users_path %></p>

<div class="container text-center">

  <div class="display-1"><a><%= link_to 'Foodie', recipes_path%></a></div></br>
  <div><img src='<%= @user.img_url %>' alt="User Profile Picture" class="rounded-circle"></div>
  <div><h2><%= @user.username %></h2></div>
  <div>
    <% if current_user? %>
            <div><%= link_to 'Edit Profile', edit_user_path%></div></br>
          <% end %>
  </div>
  <div>
    <% if current_user? %>
            <div><%= link_to 'Add a New Recipe', new_recipe_path%></div></br>
          <% end %>
  </div>
  <div>Owned Recipe(s): <% @user.recipes.each do |recipe| %>
          <div><%= link_to (image_tag recipe.img_url, size: "210x200"), recipe %></div>
          <div><%= link_to recipe.title, recipe %></div>
          <% if current_user? %>
            <div><%= link_to 'Edit This Recipe', edit_recipe_path(recipe) %></div></br>
          <% end %>
       <% end %></div>
</div></br>
